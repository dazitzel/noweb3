% Right arrow (internal use)
\newcommand{\ra}{\(\rightarrow\)\ }

% Terminal Simbols
\newcommand{\ter}[1]{{\rm '#1'}}
%reserved words
\newcommand{\rwd}[1]{{\bf\lowercase{#1}}}
% empty production
\newcommand{\emptyprod}{$\epsilon$ }

% repetitions and optionals
\newcommand{\rep}[1]{{\rm\{}#1{\/\rm\}}}
\newcommand{\opt}[1]{{\rm [}#1{\/\rm ]}}
\newcommand{\oneormore}[1]{{\rm\{}#1{\/\rm\}$^+$}}
 
\newcommand{\prg}[1]{{\it #1\/}}
 
%productions: \produc{non-terminal}{rule}
\newcommand{\produc}[2]{#1 & \ra & #2 \\}
 
%new line inside a production
\newcommand{\NL}{\\  & &}
%new line indented
\newcommand{\NLI}{\NL\hspace{2ex}}

% 'or'
\newcommand{\Or}{ $|$ }
\newlength{\orlen}
\settowidth{\orlen}{\Or\ }
% 'or' in a new line
\newcommand{\OrNL}{\NL\hspace{-\orlen}\Or\ }

%Environment for productions
\newenvironment{Produc}{\vspace{0.8ex}\par\noindent\hspace{3ex}\it\begin{tabular}{rcl}}{\end{tabular}\vspace{0.8ex}\par\noindent}

